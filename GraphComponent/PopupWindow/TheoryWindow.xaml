<Window x:Class="GraphComponent.PopupWindow.TheoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphComponent.PopupWindow"
        mc:Ignorable="d"
        Title="Теория" Height="300" Width="700">
    <Grid>
        <Button Name="PropertiesButton" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,5,0,20" AutomationProperties.HelpText="Нажми на кнопку, чтобы ..." Click="PropertiesButton_Click" >Свойства минимальных нумераций</Button>
        <Button Name="FlatButton" Margin="20,40,0,0" AutomationProperties.HelpText="Нажми на кнопку, чтобы ..." RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Click="FlatButton_Click" >Свойства минимальных нумераций</Button>
        <Button Name="EstimatesButton" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,75,0,0" AutomationProperties.HelpText="Нажми на кнопку, чтобы ..." Click="EstimatesButton_Click" >Оценки длин деревьев</Button>
        <TextBlock Name="TheoryRichTextBox" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" Margin="240,5,5,5" HorizontalAlignment="Right" TextWrapping="Wrap" />
    </Grid>
</Window>
