<Window x:Class="GraphProject.SettingWindow.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphProject.SettingWindow"
        mc:Ignorable="d"
        Title="PopupWindow" Height="140" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10">
            <TextBlock x:Name="Message"/>
            <Separator/>
            <TextBox x:Name="NameTextBox"/>
            <Separator/>
            <Button x:Name="ButtonField" Click="OnSave" />
        </StackPanel>
    </Grid>
</Window>
